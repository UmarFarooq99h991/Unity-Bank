@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 bg-light rounded" style="max-width: 500px; width: 100%;">
        <h2 class="text-center text-primary fw-bold">📝 Create a New Account</h2>
        <hr />

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger text-center fw-bold"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.FullName" class="form-control border-primary shadow-sm" aria-required="true" placeholder="Ali" />
                <label asp-for="Input.FullName">Full Name</label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control border-primary shadow-sm" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control border-primary shadow-sm" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input type="password" name="TransactionPassword" class="form-control border-primary shadow-sm" required placeholder="Transaction Password" />
                <label>Transaction Password</label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control border-primary shadow-sm" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-success fw-bold">🚀 Register</button>
        </form>

        <section class="text-center mt-4">
            <h5>Or register using another service</h5>
            <hr />
            @if ((Model.ExternalLogins?.Count ?? 0) == 0)
            {
                <div>
                    <p class="text-danger fw-bold">
                        There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article</a>.
                    </p>
                </div>
            }
            else
            {
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex flex-column gap-2">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="btn btn-outline-primary w-100" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">
                            🔗 @provider.DisplayName
                        </button>
                    }
                </form>
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card {
        border-radius: 12px;
    }

    .btn-success {
        transition: 0.3s ease-in-out;
        font-size: 18px;
    }

        .btn-success:hover {
            background-color: #28a745;
            transform: scale(1.05);
        }

    .form-control {
        border-radius: 10px;
        font-size: 16px;
    }

    a.text-decoration-none:hover {
        text-decoration: underline;
    }
</style>

@model Unity_Bank.Models.BankAccount

<h2 class="text-center text-primary my-4 fw-bold">Open a New Account</h2>

<div class="card shadow-lg p-4 rounded">
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label class="form-label fw-bold">Account Number</label>
            <input asp-for="AccountNumber" class="form-control border-primary shadow-sm" placeholder="Enter account number" required />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Account Type</label>
            <select asp-for="AccountType" class="form-select border-primary shadow-sm">
                <option value="Savings">Savings</option>
                <option value="Checking">Checking</option>
            </select>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success btn-lg shadow-sm px-4">
                <i class="bi bi-plus-circle"></i> Create Account
            </button>
        </div>
    </form>
</div>

<style>
    .card {
        max-width: 500px;
        margin: auto;
        border: none;
    }

    .form-control, .form-select {
        border-width: 2px;
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.3);
            border-color: #007bff;
        }

    .btn-lg {
        font-size: 1.1rem;
    }

    .btn:hover {
        transform: scale(1.05);
        transition: 0.3s ease-in-out;
    }
</style>

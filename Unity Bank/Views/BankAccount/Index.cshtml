@model IEnumerable<Unity_Bank.Models.BankAccount>

<h2>Your Accounts</h2>

<table class="table">
    <thead>
        <tr>
            <th>Account Number</th>
            <th>Type</th>
            <th>Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model)
        {
            <tr>
                <td>@account.AccountNumber</td>
                <td>@account.AccountType</td>
                <td>@account.Balance</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Open New Account</a>

@model IEnumerable<Unity_Bank.Models.BankAccount>

<h2 class="text-center text-primary my-4 fw-bold">Your Accounts</h2>

<div class="table-responsive">
    <table class="table table-hover table-striped table-bordered shadow-sm rounded">
        <thead class="table-dark text-center">
            <tr>
                <th>Account Number</th>
                <th>Type</th>
                <th>Balance</th>
            </tr>
        </thead>
        <tbody class="text-center align-middle">
            @foreach (var account in Model)
            {
                <tr class="transition">
                    <td class="fw-bold">@account.AccountNumber</td>
                    <td>
                        <span class="badge bg-info text-dark px-3 py-2">@account.AccountType</span>
                    </td>
                    <td class="fw-bold text-@(account.Balance >= 0 ? "success" : "danger")">
                        @account.Balance.ToString("C")
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <a asp-action="Create" class="btn btn-primary px-4 py-2 fw-bold shadow">
        <i class="bi bi-plus-circle"></i> Open New Account
    </a>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
        transition: background-color 0.3s ease-in-out;
    }

    .transition {
        transition: all 0.3s ease-in-out;
    }

    .table {
        border-radius: 8px;
        overflow: hidden;
    }

    .badge {
        font-size: 1rem;
    }

    .btn {
        transition: transform 0.2s ease-in-out;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>

@model Unity_Bank.Models.BankAccount

<h2 class="text-center text-primary my-4 fw-bold">Account Details</h2>

<div class="card shadow-lg p-4 rounded">
    <p class="fs-5"><strong>Account Number:</strong> <span class="text-dark">@Model.AccountNumber</span></p>
    <p class="fs-5"><strong>Account Type:</strong> <span class="badge bg-info text-dark px-3 py-2">@Model.AccountType</span></p>
    <p class="fs-5"><strong>Balance:</strong> <span class="fw-bold text-success">@Model.Balance.ToString("C")</span></p>
</div>

<h3 class="text-secondary mt-4 fw-bold">Transaction History</h3>

<div class="table-responsive">
    <table class="table table-hover table-striped table-bordered shadow-sm rounded">
        <thead class="table-dark text-center">
            <tr>
                <th>Transaction Type</th>
                <th>Amount</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody class="text-center align-middle">
            @foreach (var transaction in ViewBag.Transactions)
            {
                <tr class="transition">
                    <td>@transaction.TransactionType</td>
                    <td class="fw-bold text-@(transaction.Amount >= 0 ? "success" : "danger")">
                        @transaction.Amount.ToString("C")
                    </td>
                    <td>@transaction.TransactionDate.ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .card {
        max-width: 600px;
        margin: auto;
        border-left: 5px solid #007bff;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.1);
        transition: background-color 0.3s ease-in-out;
    }

    .transition {
        transition: all 0.3s ease-in-out;
    }

    .table {
        border-radius: 8px;
        overflow: hidden;
    }

    .badge {
        font-size: 1rem;
    }
</style>

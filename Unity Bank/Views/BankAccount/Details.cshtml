@model Unity_Bank.Models.BankAccount

<h2>Account Details</h2>

<p><strong>Account Number:</strong> @Model.AccountNumber</p>
<p><strong>Account Type:</strong> @Model.AccountType</p>
<p><strong>Balance:</strong> @Model.Balance.ToString("C")</p>

<h3>Transaction History</h3>
<table class="table">
    <thead>
        <tr>
            <th>Transaction Type</th>
            <th>Amount</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in ViewBag.Transactions)
        {
            <tr>
                <td>@transaction.TransactionType</td>
                <td>@transaction.Amount.ToString("C")</td>
                <td>@transaction.TransactionDate</td>
            </tr>
        }
    </tbody>
</table>
